<div class="form-group">
      <%= f.label :profile_summary_cont, "Profile summary contains" %>
      <%= f.text_field :profile_summary_cont, :class => "form-control", :placeholder => "Profile summary contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/chessplayers" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#chessplayers_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Dob</th>
        <th>Gender</th>
        <th>Uscf</th>
        <th>Uscf title</th>
        <th>Uscf rating</th>
        <th>Fide</th>
        <th>Fide title</th>
        <th>Fide rating</th>
        <th>Federation</th>
        <th>Actions</th>
      </tr>

      <% @chessplayers.each do |chessplayer| %>
      <tr>
        <td>
          <% if chessplayer.user.present? %>
            <a href="/users/<%= chessplayer.user.id %>">
              <%= chessplayer.user.id %>
            </a>
          <% end %>
        </td>
        <td><%= chessplayer.first_name %></td>
        <td><%= chessplayer.last_name %></td>
        <td><%= chessplayer.dob %></td>
        <td><%= chessplayer.gender %></td>
        <td><%= chessplayer.uscf_id %></td>
        <td><%= chessplayer.uscf_title %></td>
        <td><%= chessplayer.uscf_rating %></td>
        <td><%= chessplayer.fide_id %></td>
        <td><%= chessplayer.fide_title %></td>
        <td><%= chessplayer.fide_rating %></td>
        <td><%= chessplayer.federation %></td>
        <td>
          <a href="/chessplayers/<%= chessplayer.id %>" class="btn btn-primary">Show</a>
          <a href="/chessplayers/<%= chessplayer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_chessplayer/<%= chessplayer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @chessplayers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
