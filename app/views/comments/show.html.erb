<div class="page-header">
  <h3>Comment #<%= @comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Prospector</dt>
      <dd>
        <% if @comment.prospector.present? %>
          <a href="/prospectors/<%= @comment.prospector_id %>">
            <%= @comment.prospector.name %>
          </a>
        <% end %>
      </dd>

      <dt>Chessplayer</dt>
      <dd>
        <% if @comment.chessplayer.present? %>
          <a href="/chessplayers/<%= @comment.chessplayer_id %>">
            <%= @comment.chessplayer.id %>
          </a>
        <% end %>
      </dd>

      <dt>Content</dt>
      <dd><%= @comment.content %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/comments" class="btn btn-primary">
        Back
      </a>
      <a href="/comments/<%= @comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_comment/<%= @comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
