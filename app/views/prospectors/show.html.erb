<div class="page-header">
  <h3>Prospector #<%= @prospector.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @prospector.user.present? %>
          <a href="/users/<%= @prospector.user_id %>">
            <%= @prospector.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= @prospector.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/prospectors" class="btn btn-primary">
        Back
      </a>
      <a href="/prospectors/<%= @prospector.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_prospector/<%= @prospector.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Prospector has many comments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Comments
      </li>

      <% @prospector.comments.each do |comment| %>
        <li class="list-group-item">
          <a href="/comments/<%= comment.id %>">
            <%= comment.prospector_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/comments/<%= comment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_comment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for prospector_id -->
      <input type="hidden" name="prospector_id" value="<%= @prospector.id %>">

      <!-- Label and input for chessplayer_id -->
      <div class="form-group">
        <label for="chessplayer_id" class="control-label">
          Chessplayer
        </label>

        <%= select_tag(:chessplayer_id, options_from_collection_for_select(Chessplayer.all, :id, :id), :class => "form-control") %>
      </div>

      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="control-label">
          Content
        </label>

        <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-success">
        Create Comment
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
