<!-- Validation failure messages -->
<% if @profile.errors.any? %>
  <% @profile.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Profile #<%= @profile.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_profile/<%= @profile.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for chessplayer_id -->
      <div class="form-group">
        <label for="chessplayer_id" class="control-label">
          Chessplayer
        </label>

        <%= select_tag(:chessplayer_id, options_from_collection_for_select(Chessplayer.all, :id, :id, @profile.chessplayer_id), :class => "form-control") %>
      </div>

      <!-- Label and input for profile_photo -->
      <div class="form-group">
        <label for="profile_photo" class="control-label">
          Profile photo
        </label>

        <input type="text" id="profile_photo" name="profile_photo" placeholder="Profile photo" class="form-control" value="<%= @profile.profile_photo %>">
      </div>

      <!-- Label and input for summary -->
      <div class="form-group">
        <label for="summary" class="control-label">
          Summary
        </label>

        <input type="text" id="summary" name="summary" placeholder="Summary" class="form-control" value="<%= @profile.summary %>">
      </div>

      <button class="btn btn-warning">
        Update Profile
      </button>
      or
      <a href="/profiles/<%= @profile.id %>">Cancel</a>
    </form>
  </div>
</div>
