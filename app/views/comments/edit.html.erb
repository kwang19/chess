<!-- Validation failure messages -->
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Comment #<%= @comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_comment/<%= @comment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for prospector_id -->
      <div class="form-group">
        <label for="prospector_id" class="control-label">
          Prospector
        </label>

        <%= select_tag(:prospector_id, options_from_collection_for_select(Prospector.all, :id, :name, @comment.prospector_id), :class => "form-control") %>
      </div>

      <!-- Label and input for chessplayer_id -->
      <div class="form-group">
        <label for="chessplayer_id" class="control-label">
          Chessplayer
        </label>

        <%= select_tag(:chessplayer_id, options_from_collection_for_select(Chessplayer.all, :id, :id, @comment.chessplayer_id), :class => "form-control") %>
      </div>

      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="control-label">
          Content
        </label>

        <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @comment.content %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Comment
      </button>
      or
      <a href="/comments/<%= @comment.id %>">Cancel</a>
    </form>
  </div>
</div>
